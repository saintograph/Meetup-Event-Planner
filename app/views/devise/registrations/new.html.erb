  <div class="wrapper">
    <div class="register-background"> 
        <div class="filter-black"></div>
            <div class="container">
                            <p><small><%= devise_error_messages! %></small></p>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1" style="margin-top: 25px;">
                        <div class="register-card">
                            <h4 class="title">REGISTER</h4>
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"register-form") do |f| %>    
                                <label for="name">Name</label>
                                <input type="text" class="form-control" placeholder="e.g. John Doe" autofocus="true">
                                  
                                <%= f.label :email, for: "email" %>
                                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "john@evejet.com" %>

                                <%= f.label :password %>
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "••••••••" %>

                                <%= f.label :password_confirmation %><br />
                                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",  placeholder: "••••••••" %>

                                <%= f.submit "Register", class: "btn btn-danger btn-block" %>

                            <% end %>

                            <div class="forgot">
                                <!--<a href="#" class="btn btn-simple btn-danger" style="font-size: 1em;">Forgot password?</a>-->
                                <span  class="btn btn-simple btn-default">
                                  <%= render "devise/shared/links" %>
                                </span>
                                <!-- <a href="event_form.html" class="btn btn-simple btn-default" style="font-size: 1em; margin-top: 5px;">I have an account</a> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>     
        <div class="footer register-footer text-center">
                <h6>&copy; 2016, made with <i class="fa fa-heart heart"></i> by Winfred Selwyn</h6>
        </div>
    </div>
</div>  