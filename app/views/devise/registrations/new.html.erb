                                <h4 class="title">REGISTER</h4>
                                <form class="register-form" id="form" v-on:submit.prevent="addUser">
                                    
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" placeholder="e.g. John Doe" autofocus="true">

                                   
                                    <label for="email">Email</label>
